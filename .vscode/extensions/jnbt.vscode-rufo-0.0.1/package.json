{
	"name": "vscode-rufo",
	"displayName": "Rufo - Ruby formatter",
	"description": "VS Code plugin for ruby-formatter/rufo",
	"homepage": "https://github.com/jnbt/vscode-rufo/blob/master/README.md",
	"repository": {
		"type": "git",
		"url": "https://github.com/jnbt/vscode-rufo.git"
	},
	"keywords": [
		"ruby",
		"rufo",
		"formatting"
	],
	"bugs": {
		"url": "https://github.com/jnbt/vscode-rufo/issues"
	},
	"license": "SEE LICENSE IN LICENSE",
	"version": "0.0.1",
	"author": {
		"name": "jnbt",
		"url": "https://github.com/jnbt"
	},
	"publisher": "jnbt",
	"engines": {
		"vscode": "^1.27.0"
	},
	"categories": [
		"Formatters"
	],
	"galleryBanner": {
		"color": "#FAFBFC",
		"theme": "light"
	},
	"activationEvents": [
		"onLanguage:ruby"
	],
	"icon": "icon.png",
	"preview": true,
	"contributes": {
		"configuration": {
			"title": "Rufo",
			"properties": {
				"rufo.exe": {
					"type": "string",
					"default": "rufo",
					"description": "Path to invoke rufo"
				},
				"rufo.useBundler": {
					"type": "boolean",
					"default": false,
					"description": "Whether Rufo should be started via Bundler"
				}
			}
		}
	},
	"main": "./out/extension",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test",
		"lint": "tslint --project ."
	},
	"devDependencies": {
		"typescript": "^2.6.1",
		"vscode": "^1.1.21",
		"tslint": "^5.8.0",
		"@types/node": "^8.10.25",
		"@types/mocha": "^2.2.42"
	},
	"__metadata": {
		"id": "8a5184c4-a868-4f8b-a83b-919720eea954",
		"publisherId": "3300422c-53bb-4614-b0af-51fc863fc072",
		"publisherDisplayName": "jnbt"
	}
}